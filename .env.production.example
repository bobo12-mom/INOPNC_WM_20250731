# INOPNC Work Management System - Production Environment Variables

# =============================================================================
# APPLICATION ENVIRONMENT
# =============================================================================
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Production Supabase Project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-production-project.supabase.co

# Production Supabase Anonymous Key (safe to expose to client)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-production-anonymous-key

# Production Supabase Service Role Key (server-side only, keep secret)
SUPABASE_SERVICE_ROLE_KEY=your-production-service-role-key

# Production Database URL for migrations
DATABASE_URL=postgresql://postgres:[password]@db.[project].supabase.co:5432/postgres

# =============================================================================
# AUTHENTICATION
# =============================================================================
# NextAuth.js Configuration
NEXTAUTH_URL=https://your-production-domain.com
NEXTAUTH_SECRET=your-super-secret-nextauth-key-at-least-32-characters

# =============================================================================
# SECURITY & MONITORING
# =============================================================================
# Sentry Configuration for Error Monitoring
SENTRY_DSN=your-production-sentry-dsn
SENTRY_ORG=your-organization
SENTRY_PROJECT=inopnc-wm-production
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# API Keys for External Services
ANTHROPIC_API_KEY=your-anthropic-api-key
PERPLEXITY_API_KEY=your-perplexity-api-key
OPENAI_API_KEY=your-openai-api-key

# =============================================================================
# RATE LIMITING & SECURITY
# =============================================================================
# Rate Limiting Configuration
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# CORS Configuration
CORS_ORIGIN=https://your-production-domain.com,https://www.your-production-domain.com
CORS_CREDENTIALS=true

# Security Headers
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true
HSTS_MAX_AGE=31536000

# =============================================================================
# FILE STORAGE & UPLOADS
# =============================================================================
# Maximum file upload size (in bytes)
MAX_FILE_SIZE=10485760

# Allowed file types for uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================
# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# =============================================================================
# PERFORMANCE & CACHING
# =============================================================================
# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
WEB_VITALS_TRACKING=true
REAL_USER_MONITORING=true

# Caching Configuration
CACHE_TTL=3600
REDIS_URL=redis://your-redis-instance:6379

# =============================================================================
# LOGGING & AUDIT
# =============================================================================
# Logging Configuration
LOG_LEVEL=warn
AUDIT_LOGGING_ENABLED=true
SECURITY_EVENT_LOGGING=true

# Log Retention
LOG_RETENTION_DAYS=90
AUDIT_LOG_RETENTION_DAYS=365

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================
# Email Service (for notifications)
SMTP_HOST=smtp.your-email-service.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
FROM_EMAIL=noreply@your-domain.com

# SMS Service (for critical alerts)
SMS_API_KEY=your-sms-api-key
SMS_FROM_NUMBER=+82xxxxxxxxxx

# =============================================================================
# BUSINESS LOGIC
# =============================================================================
# Construction Industry Specific
DEFAULT_WORK_START_TIME=08:00
DEFAULT_WORK_END_TIME=17:00
OVERTIME_THRESHOLD_HOURS=8
SAFETY_REPORT_MANDATORY=true

# Analytics and Reporting
ANALYTICS_ENABLED=true
BUSINESS_INTELLIGENCE_ENABLED=true
EXPORT_FORMATS=pdf,excel,csv

# =============================================================================
# COMPLIANCE & REGULATORY
# =============================================================================
# Korean Data Protection
PERSONAL_INFO_PROTECTION_ACT_COMPLIANCE=true
GDPR_COMPLIANCE=true
DATA_RETENTION_POLICY_DAYS=2555

# Industry Compliance
CONSTRUCTION_SAFETY_REGULATIONS=true
LABOR_LAW_COMPLIANCE=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Feature Toggles for Production
FEATURE_ANALYTICS_DASHBOARD=true
FEATURE_PERFORMANCE_MONITORING=true
FEATURE_BLUEPRINT_MARKUP=true
FEATURE_MATERIAL_MANAGEMENT=true
FEATURE_EQUIPMENT_TRACKING=true
FEATURE_ADVANCED_REPORTING=true
FEATURE_MOBILE_PWA=true
FEATURE_OFFLINE_SYNC=true

# Beta Features (disabled in production by default)
FEATURE_AI_INSIGHTS=false
FEATURE_PREDICTIVE_ANALYTICS=false
FEATURE_VOICE_COMMANDS=false

# =============================================================================
# INFRASTRUCTURE
# =============================================================================
# CDN Configuration
CDN_URL=https://cdn.your-domain.com
STATIC_ASSETS_URL=https://static.your-domain.com

# Geographic Configuration
DEFAULT_TIMEZONE=Asia/Seoul
DEFAULT_LANGUAGE=ko
CURRENCY=KRW

# =============================================================================
# DEVELOPMENT & DEBUG (disabled in production)
# =============================================================================
DEBUG=false
VERBOSE_LOGGING=false
SOURCE_MAPS=false
WEBPACK_BUNDLE_ANALYZER=false