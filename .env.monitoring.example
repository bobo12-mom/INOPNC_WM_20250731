# INOPNC Work Management System - Monitoring Configuration

# Sentry Configuration
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_PROJECT=inopnc-work-management
SENTRY_ORG=your-organization

# Monitoring Endpoints
MONITORING_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
ALERT_WEBHOOK_URL=https://your-alerting-service.com/webhook
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook

# Email Configuration (for alerts)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=alerts@your-domain.com
SMTP_PASS=your-smtp-password
ALERT_EMAIL_FROM=alerts@your-domain.com
ALERT_EMAIL_TO=admin@your-domain.com,ops@your-domain.com

# SMS Configuration (for critical alerts)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_FROM=+1234567890
ALERT_SMS_TO=+1234567890,+0987654321

# Performance Monitoring Thresholds
PERF_API_SLOW_THRESHOLD=1000
PERF_DB_SLOW_THRESHOLD=500
PERF_ERROR_RATE_THRESHOLD=5
PERF_MEMORY_THRESHOLD=85

# Monitoring Features
ENABLE_DETAILED_LOGGING=true
ENABLE_DATABASE_MONITORING=true
ENABLE_REAL_USER_MONITORING=true
ENABLE_SECURITY_MONITORING=true
ENABLE_CONSTRUCTION_METRICS=true

# Alert Configuration
ALERT_COOLDOWN_MINUTES=10
ALERT_ESCALATION_MINUTES=15
ENABLE_EMAIL_ALERTS=true
ENABLE_SMS_ALERTS=true
ENABLE_SLACK_ALERTS=true

# Sampling Rates (0.0 to 1.0)
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
RUM_SAMPLE_RATE=0.1

# Environment
NODE_ENV=production
NEXT_PUBLIC_APP_VERSION=1.0.0