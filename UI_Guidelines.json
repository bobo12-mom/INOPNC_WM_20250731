{
  "title": "INOPNC Work Management System - UI Guidelines",
  "version": "2.0.0",
  "lastUpdated": "2024-01",
  "designPhilosophy": {
    "corePrinciples": [
      {
        "name": "Mobile-First",
        "description": "Every interface optimized for construction site mobile usage"
      },
      {
        "name": "Accessibility-First",
        "description": "Large touch targets, high contrast, screen reader support"
      },
      {
        "name": "Role-Based UI",
        "description": "Adaptive interfaces based on user roles (worker, manager, admin)"
      },
      {
        "name": "Cultural Sensitivity",
        "description": "Korean language and construction industry conventions"
      }
    ],
    "foundation": {
      "baseSystem": "Toss Design System with construction industry adaptations",
      "architecture": "Composition-based with variant system",
      "themeSupport": "Light/Dark/System modes with smooth transitions",
      "strategy": "Mobile-first with desktop enhancements"
    }
  },
  "colorSystem": {
    "coreBrand": {
      "tossBlue": {
        "500": "#3182F6",
        "600": "#2563EB",
        "700": "#1D4ED8",
        "usage": "Primary actions, links"
      }
    },
    "neutral": {
      "gray": {
        "50": "#F9FAFB",
        "100": "#F3F4F6",
        "200": "#E5E7EB",
        "700": "#374151",
        "800": "#1F2937",
        "900": "#111827"
      }
    },
    "semantic": {
      "success": "#10B981",
      "error": "#EF4444",
      "warning": "#F59E0B",
      "info": "#3B82F6"
    },
    "darkMode": {
      "backgrounds": {
        "primary": "dark:bg-gray-900",
        "card": "dark:bg-gray-800",
        "secondary": "dark:bg-gray-700"
      },
      "text": {
        "primary": "dark:text-gray-100",
        "secondary": "dark:text-gray-300",
        "muted": "dark:text-gray-400"
      }
    }
  },
  "typography": {
    "fontStack": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, 'Noto Sans KR', sans-serif",
    "scale": {
      "display": { "class": "text-4xl", "size": "36px", "usage": "Page titles" },
      "h1": { "class": "text-3xl", "size": "30px", "usage": "Major sections" },
      "h2": { "class": "text-2xl", "size": "24px", "usage": "Subsections" },
      "h3": { "class": "text-xl", "size": "20px", "usage": "Card headers" },
      "h4": { "class": "text-lg", "size": "18px", "usage": "List items" },
      "body": { "class": "text-base", "size": "16px", "usage": "Default text" },
      "small": { "class": "text-sm", "size": "14px", "usage": "Secondary info" },
      "tiny": { "class": "text-xs", "size": "12px", "usage": "Labels, hints" }
    },
    "weights": {
      "normal": { "value": 400, "usage": "Body text" },
      "medium": { "value": 500, "usage": "Emphasis" },
      "semibold": { "value": 600, "usage": "Subheadings" },
      "bold": { "value": 700, "usage": "Headings" }
    },
    "mobileFontSizeAdaptation": {
      "enabled": true,
      "pattern": "Dynamic sizing based on useFontSize() hook",
      "example": "isLargeFont ? 'text-3xl' : 'text-xl'"
    }
  },
  "spacing": {
    "baseUnit": "4px",
    "scale": {
      "xs": { "class": "p-1", "size": "4px", "usage": "Icon padding" },
      "sm": { "class": "p-2", "size": "8px", "usage": "Compact spacing" },
      "md": { "class": "p-3", "size": "12px", "usage": "Default spacing" },
      "lg": { "class": "p-4", "size": "16px", "usage": "Card padding" },
      "xl": { "class": "p-5", "size": "20px", "usage": "Section padding" },
      "2xl": { "class": "p-6", "size": "24px", "usage": "Large sections" }
    },
    "componentSpacing": {
      "cardPadding": {
        "standard": "p-4 (16px)",
        "emphasis": "p-5 (20px)"
      },
      "gridGaps": {
        "cards": "gap-3 (12px)",
        "sections": "gap-4 (16px)"
      },
      "stackSpacing": "space-y-4 (16px) vertical rhythm"
    }
  },
  "components": {
    "buttonSystem": {
      "variants": {
        "primary": "bg-toss-blue-600 hover:bg-toss-blue-700 text-white",
        "secondary": "bg-gray-100 hover:bg-gray-200 text-gray-900",
        "danger": "bg-red-500 hover:bg-red-600 text-white",
        "ghost": "hover:bg-gray-100 text-gray-700",
        "outline": "border-2 border-toss-blue-600 text-toss-blue-600"
      },
      "sizes": {
        "sm": "h-9 px-3 text-sm",
        "md": "h-10 px-4",
        "lg": "h-12 px-6 text-lg",
        "full": "h-14 w-full text-lg"
      },
      "interactiveStates": [
        "active:scale-95 transition-all duration-200",
        "disabled:opacity-50 disabled:cursor-not-allowed"
      ]
    },
    "cards": {
      "standard": "bg-white dark:bg-gray-800 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-200",
      "emphasis": "bg-white dark:bg-gray-800 rounded-2xl shadow-lg border border-gray-200 dark:border-gray-700"
    },
    "formControls": {
      "input": "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-toss-blue-500 focus:border-transparent dark:bg-gray-700 dark:border-gray-600 dark:text-white",
      "select": "appearance-none bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600"
    },
    "mobilePatterns": {
      "bottomNavigation": {
        "container": "fixed bottom-0 left-0 right-0 bg-white dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700 grid grid-cols-4 pb-safe",
        "navItem": "flex flex-col items-center justify-center py-2 min-h-[56px] active:bg-gray-100 dark:active:bg-gray-700"
      },
      "mobileHeader": "sticky top-0 z-50 bg-white dark:bg-gray-900 border-b border-gray-200 dark:border-gray-700 backdrop-blur-md bg-opacity-90"
    }
  },
  "animations": {
    "transitions": {
      "default": "transition-all duration-200 ease-in-out",
      "hover": {
        "shadow": "hover:shadow-lg transition-shadow duration-200",
        "scale": "hover:scale-105 transition-transform duration-200"
      },
      "active": "active:scale-95 transition-transform duration-100"
    },
    "loadingStates": {
      "skeleton": "animate-pulse bg-gray-200 dark:bg-gray-700 rounded",
      "spinner": "animate-spin h-5 w-5 text-toss-blue-600"
    }
  },
  "accessibility": {
    "touchTargets": {
      "minimumSize": "44x44px",
      "spacing": "8px minimum between targets",
      "visualFeedback": "Clear hover, focus, and active states"
    },
    "focusManagement": {
      "visible": "focus-visible:ring-2 focus-visible:ring-toss-blue-500 focus-visible:ring-offset-2",
      "keyboardOnly": "Focus visible only on keyboard navigation"
    },
    "screenReaderSupport": [
      "Semantic HTML structure",
      "Comprehensive ARIA labels",
      "Role attributes for complex components",
      "Live regions for dynamic updates"
    ],
    "fontSizeAccessibility": {
      "enabled": true,
      "features": [
        "Built-in large font mode support",
        "Dynamic sizing based on user preferences",
        "Minimum 14px for body text"
      ]
    }
  },
  "constructionIndustrySpecifics": {
    "roleBasedAdaptations": {
      "pattern": "Navigation filtering by user role",
      "roles": ["worker", "site_manager", "customer_manager", "admin", "system_admin"]
    },
    "domainComponents": [
      {
        "name": "Daily Reports",
        "description": "Multi-section forms with tabs"
      },
      {
        "name": "Attendance",
        "description": "Time tracking with visual indicators"
      },
      {
        "name": "Materials",
        "description": "Inventory management with units"
      },
      {
        "name": "Weather",
        "description": "Temperature and condition inputs"
      },
      {
        "name": "Site Selection",
        "description": "Multi-site support"
      }
    ],
    "koreanLocalization": {
      "textLanguage": "All UI text in Korean",
      "dateFormat": "YYYY년 MM월 DD일",
      "timeFormat": "24-hour (HH:mm)",
      "currency": "₩ (Korean Won)"
    }
  },
  "responsive": {
    "breakpoints": {
      "sm": "640px - Small tablets",
      "md": "768px - Tablets",
      "lg": "1024px - Desktop",
      "xl": "1280px - Large desktop"
    },
    "layoutStrategies": {
      "mobile": "Single column, bottom nav",
      "tablet": "Two columns, side nav",
      "desktop": "Multi-column, enhanced features"
    }
  },
  "performance": {
    "componentOptimization": [
      "Lazy load mobile components",
      "Use dynamic imports for route-based splitting",
      "Implement virtual scrolling for long lists",
      "Optimize images with next/image"
    ],
    "bundleSize": [
      "Separate mobile/desktop component bundles",
      "Tree-shake unused components",
      "Use CSS modules for component-specific styles"
    ]
  },
  "implementation": {
    "componentArchitecture": {
      "baseUIComponents": "/components/ui/ - Reusable primitives",
      "featureComponents": "/components/dashboard/, /components/daily-reports/ - Domain-specific",
      "mobileComponents": "/components/mobile/ - Mobile-optimized variants"
    },
    "namingConventions": {
      "pattern": "[Domain][Type]",
      "examples": {
        "WorkLogList": "Work log list component",
        "WorkLogCard": "Work log card component",
        "SiteMap": "Site map component",
        "ReportDashboard": "Report dashboard component"
      }
    },
    "stateManagement": {
      "global": "Zustand with TypeScript, DevTools, and persistence",
      "component": "React Context API for auth, theme, etc."
    }
  },
  "dependencies": {
    "runtime": [
      "framer-motion",
      "class-variance-authority",
      "@radix-ui/react-*",
      "zustand",
      "react-hook-form",
      "@hookform/resolvers",
      "zod"
    ],
    "development": [
      "@tailwindcss/forms",
      "@tailwindcss/typography",
      "@testing-library/react",
      "@testing-library/jest-dom",
      "jest-axe",
      "msw"
    ]
  }
}